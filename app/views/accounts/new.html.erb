<div class="col-md-6 col-md-offset-3 panel panel-default">
  <div class="panel-body">
    <h2>Create an Account </h2>

    <%= simple_form_for @account do |f| %>
      <%= f.input :subdomain, input_html: { class: 'input-lg' } %>
      <%= f.simple_fields_for :owner do |of| %>
        <%= of.input :email, input_html: { class: 'input-lg' } %>
        <%= of.input :name, input_html: { class: 'input-lg' } %>
        <%= of.input :password, input_html: { class: 'input-lg' } %>
        <%= of.input :password_confirmation, input_html: { class: 'input-lg' } %>
      <% end %>
      <%= f.submit "Create Account", class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
