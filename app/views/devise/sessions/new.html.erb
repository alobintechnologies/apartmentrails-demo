<div class="col-md-6 col-md-offset-3 panel panel-default login-panel">
  <div class="panel-body">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: 'btn btn-primary btn-block btn-lg' %>
      </div>
    <% end %>
    <div class="shared-links text-center">
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      <%= link_to "Sign up for an account", new_account_url(subdomain: false) %>
    </div>
  </div>
</div>
